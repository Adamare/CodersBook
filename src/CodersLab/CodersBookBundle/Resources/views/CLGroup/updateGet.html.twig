{% extends "CodersBookBundle::base.html.twig" %}

{% set title = 'Edycja grupy'  %}

{% block content %}
        {% if error is defined%}
            <div class="info error"><i class="material-icons">warning</i> {{ error }}</div>
        {% else %}
            {% if success is defined%}
                <div class="info success"><i class="material-icons">done</i> Poprawnie zapisano grupę.</div>
            {% endif%}
            {{form_start(form)}}
            {{form_widget(form)}}
            {{form_end(form)}}
        {% endif %}
        <div class="w100 text-center"><a href="{{ path('group_admin_all') }}">Strona główna</a></div>
{% endblock %}